<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title></title>
    <style>
        *{padding: 0px; margin:0px;}
        ul{perspective:1200px;position:relative;width:600px;height:600px; top:200px;margin:50px auto;perspective-origin: right;}
        /*ul{perspective:1200px;position:relative;width:600px;height:600px; top:200px;left: 800px; perspective-origin:right; }*/
        li{transform-style:preserve-3d;float:left;list-style: none;width:30px;height:600px;transition:5s;}
        li a{position:absolute;width:100%;height:100%;}
        li span{position:absolute;width:600px;height:600px;}
        li a:nth-of-type(1){ background: url(image/11.png)no-repeat;transform:translateZ(300px);}
        li a:nth-of-type(2){ background: url(image/11.png)no-repeat;transform-origin:top;transform:translateZ(-300px) rotateX(90deg);}
        li a:nth-of-type(3){ background: url(image/11.png)no-repeat;transform:translateZ(-300px) rotateX(180deg);}
        li a:nth-of-type(4){ background: url(image/11.png)no-repeat;transform-origin:bottom;transform:translateZ(300px) rotateX(90deg);}
        li span:nth-of-type(1){background:url(image/11.png)no-repeat;transform-origin:left;transform:translateZ(300px) rotateY(90deg) }
        li span:nth-of-type(2){background:url(image/11.png)no-repeat;transform-origin:left;transform:translateX(30px) translateZ(300px) rotateY(90deg)  }
        /*body:hover li{
            transform: rotateX(360deg);;
        }*/
    </style>
    <script>
        window.onload=function(){
            var oUl= document.getElementsByTagName("ul")[0];
            var oStyle=document.getElementsByTagName("style")[0];

            for(var i=0;i<20;i++){
                oUl.innerHTML+="<li><a></a><a></a><a></a><a></a><span></span><span></span></li>";
                oStyle.innerHTML+="li:nth-of-type("+(i+1)+") a{background-position:"+(-30*i)+"px}"
                oStyle.innerHTML+="body:active li:nth-of-type("+(i+1)+"){transform:rotateX(360deg) rotateY(360deg); transition:5s "+0.3*i+"s;}"
            }

			box.addEventListener('contextmenu', function(e){
				console.log(111);
				e.preventDefault();
			});
			box.ontouchend = function () {
				throw new Error("NO ERRPR:禁止长按弹出的菜单");
			}
			window.ontouchstart = function(e) { 
				e.preventDefault(); 
			};
        }


    </script>
</head>
<body>

    <ul id="box">

    </ul>


</body>
</html>